%h2
  %i.glyphicon.glyphicon-user
  = @player.first_name
  = @player.last_name

.row
  .col-md-3
    %p
      %i.glyphicon.glyphicon-star
      %b Team:
      = link_to @player.team.name, @player.team
  .col-md-3
    %p
      %i.glyphicon.glyphicon-asterisk
      %b Position:
      = @player.position.name
  .col-md-3
    %p
      %i.glyphicon.glyphicon-minus
      %b Birthdate:
      = @player.birthdate
      = surround '(', ')' do
        = @player.current_age
        years old
  .col-md-3
    %p
      %i.glyphicon.glyphicon-usd
      %b Salary:
      = @player.salary

%p
  %i.glyphicon.glyphicon-star-empty
  %b Skills:
  %table.table.table-bordered.table-condensed
    %tr
      %th{:colspan => 2} Mental
      %th{:colspan => 2} Technical
      %th{:colspan => 2} Physical

    %tr
      %td Reflex
      %td= @player.reflex / 100
      %td Handling
      %td= @player.handling / 100
      %td Condition
      %td= @player.condition / 100
    %tr
      %td Discipline
      %td= @player.discipline / 100
      %td Tackling
      %td= @player.tackling / 100
      %td
      %td
    %tr
      %td Work rate
      %td= @player.work_rate / 100
      %td Positioning
      %td= @player.positioning / 100
      %td
      %td
    %tr
      %td Creativity
      %td= @player.creativity / 100
      %td Technique
      %td= @player.technique / 100
      %td
      %td
    %tr
      %td Instinct
      %td= @player.instinct / 100
      %td Shots
      %td= @player.shots / 100
      %td
      %td