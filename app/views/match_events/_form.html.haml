= form_for @match_event do |f|
  - if @match_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match_event.errors.count, "error")} prohibited this match_event from being saved:"
      %ul
        - @match_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :time
    = f.number_field :time
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
