= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :home
    = f.collection_select :home_id, Team.all, :id, :to_s

  .field
    = f.label :away
    = f.collection_select :away_id, Team.all, :id, :to_s

  .field
    = f.label :home_score
    = f.number_field :home_score
  .field
    = f.label :away_score
    = f.number_field :away_score
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :attendance
    = f.number_field :attendance
  .field
    = f.label :report
    = f.text_area :report
  .actions
    = f.submit 'Save'
