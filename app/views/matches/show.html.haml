.page-header
  %h1
    %i.glyphicon.glyphicon-sound-5-1
    =@match

%p
  %h2
    .row
      .col-md-5
        = @match.home.name
      .col-md-2
      .col-md-5
        = @match.away.name
  .row
    .col-md-5
      -if @match.home.logo.present?
        =image_tag @match.home.logo.thumb
      -else
        =image_tag @match.home.logo.default_thumb_url
    .col-md-2.score
      = @match.home_score
      = '-'
      = @match.away_score
    .col-md-5
      -if @match.away.logo.present?
        =image_tag @match.away.logo.thumb
      -else
        =image_tag @match.away.logo.default_thumb_url

%p
  %b Report:
  %i.glyphicon.glyphicon-soccer-ball
  %table.table.table-bordered.table-condensed
    %tr
      %th Event
      %th Team
      %th Minute
      %th Description

    - @match.events.each do |event|
      %tr
        %td= event.event_type
        %td
          -if event.first_player.team == @match.home
            =image_tag @match.home.logo_micro_path
          -else
            =image_tag @match.away.logo_micro_path
        %td= event.time
        %td= event.description