%h1
  Register for free!

= form_for(@signup, :html => {:role => "form", :class => "form-horizontal"}) do |f|
  - if @signup.errors.any?
    #error_explanation
      %h2
        = pluralize(@signup.errors.count, "error")
        prohibited user from being saved:
      %ul
        - @signup.errors.full_messages.each do |message|
          %li= message
  .form-group.row
    .col-md-3
      = f.label :email, :class => "control-label"
    .col-md-4
      = f.email_field :email, :class => "form-control"
  .form-group.row
    .col-md-3
      = f.label :password, :class => "control-label"
    .col-md-4
      = f.password_field :password, :class => "form-control"
  .form-group.row
    .col-md-3
      = f.label :password_confirmation, :class => "control-label"
    .col-md-4
      = f.password_field :password_confirmation, :class => "form-control"
  .form-group.row
    .col-md-3
      = f.label :team_name, :class => "control-label"
    .col-md-4
      = f.text_field :team_name, :class => "form-control"
  .form-group.row
    .col-md-2
      = f.submit "Signup", :class => "btn-lg"