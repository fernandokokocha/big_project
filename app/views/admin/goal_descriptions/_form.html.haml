= form_for [:admin, @goal_description] do |f|
  - if @goal_description.errors.any?
    #error_explanation
      %h2= "#{pluralize(@goal_description.errors.count, "error")} prohibited this goal_description from being saved:"
      %ul
        - @goal_description.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
