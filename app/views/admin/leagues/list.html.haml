.page-header
  %h1
    %i.glyphicon.glyphicon-plus
    My leagues

%table.table.table-striped.table-bordered.table-hover.table-condensed
  %tr
    %th Name
    %th Win points
    %th Draw points
    %th Win price
    %th Draw price
    %th Top scorer price
    %th Best assistant price
    %th

  - @my_leagues.each do |league|
    %tr
      %td= league.name
      %td= league.win_points
      %td= league.draw_points
      %td= league.win_price
      %td= league.draw_price
      %td= league.top_scorer_price
      %td= league.best_assistant_price
      %td= link_to 'More'

