%p#notice= notice

%p
  -if @team.logo
    =image_tag @team.logo
  -else
    =image_tag "default_logo.jpg"

%p
  = form_for @team, :url => team_path(@team), :method => :patch do |f|
    - if @team.errors.any?
      #error_explanation
        %h2= "#{pluralize(@team.errors.count, "error")} prohibited this logo from being saved:"
        %ul
          - @team.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :logo
      = f.file_field :logo
    .actions
      = f.submit 'Upload'


%p
  @team.logo:
  =@team.logo

%h1
  = @team.name

%p
  %b Balance:
  = @team.balance

%p
  %table.table.table-striped.table-bordered.table-hover.table-condensed
    %tr
      %th First name
      %th Last name
      %th Birthdate
      %th Age
      %th Position
      %th Salary
      %th

    - @team.players.order(:position).each do |player|
      %tr
        %td= player.first_name
        %td= player.last_name
        %td= player.birthdate
        %td= ((Date.today - player.birthdate)/365.25).to_i
        %td= player.position
        %td= player.salary
        %td= link_to 'Show', player


= link_to 'Edit', edit_team_path(@team)
\|
= link_to 'Back', teams_path
