.row
  .col-md-3
    %p= image_tag @team.logo_path, :id => 'team-logo'
  .col-md-9.page-header
    %h1
      = @team.name
      .small= @team.user

.row
  .col-md-4
    %p
      %i.glyphicon.glyphicon-usd
      %b Balance:
      = @team.balance
  .col-md-4
    %p
      %i.glyphicon.glyphicon-heart
      %b Reputation:
      = @team.reputation
  .col-md-4
    %p
      %i.glyphicon.glyphicon-home
      =link_to @team.stadium.name, @team.stadium