= form_for @solo_goal_description do |f|
  - if @solo_goal_description.errors.any?
    #error_explanation
      %h2= "#{pluralize(@solo_goal_description.errors.count, "error")} prohibited this solo_goal_description from being saved:"
      %ul
        - @solo_goal_description.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
