= form_for @stadium do |f|
  - if @stadium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stadium.errors.count, "error")} prohibited this stadium from being saved:"
      %ul
        - @stadium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :capacity
    = f.number_field :capacity
  .field
    = f.label :roof
    = f.check_box :roof
  .actions
    = f.submit 'Save'
